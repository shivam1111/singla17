            <field name="res_model">ingot.size</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

       <menuitem
           id= "submenu_ingot_size"
           parent= "mill_order.order_management_menu"
           sequence= "4"
           action = "action_ingot_size"
            />
</odoo>
